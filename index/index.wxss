@import '../fonts/index.wxss';

.firstView {
  width: 100%;
  height: 100%;
  text-align: center;
  padding-top: 80rpx;
  padding-bottom: 35rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  font-family: 'custom_font';
  background-image: url('http://xt2021.liujl.com:8080/static/bg_1.png');
  background-size: 95% 98%;
  background-repeat: no-repeat;
  background-position: center;
}

.firstView > text {
  font-size: 50rpx;
}

.firstView_top {
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.firstView_top_wuyan,
.firstView_top_qiyan {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.firstView_top image {
  width: 40rpx;
  height: 40rpx;
}

.firstView_top_wuyan text {
  line-height: 25rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.firstView_bot {
  flex-grow: 1;
  flex-shrink: 0;
  box-sizing: border-box;
  padding: 60rpx 60rpx 0rpx 60rpx;
  display: flex;
  flex-direction: column;
}

.firstView_bot_radar {
  flex-grow: 1;
  flex-shrink: 0;
  position: relative;
}

.firstView_bot_radar_container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.firstView_bot_top view {
  width: 50%;
  height: 60rpx;
  text-align: start;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  /* max-height: 60rpx; */
  float: left;
}

.firstView_bot_top view slider {
  flex-grow: 1;
  flex-shrink: 0;
  margin-top: 0;
  margin-bottom: 0;
}

.firstView_bot_top view text {
  font-size: 25rpx;
}

.firstView_btn {
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.firstView_btn button[type='primary'] {
  background-color: #795648;
}